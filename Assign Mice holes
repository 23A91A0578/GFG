class Solution {
    public int assignHole(int[] mices, int[] holes) {
        // code here
        Arrays.sort(mices);
        Arrays.sort(holes);
        int max_time=0;
        int time=0;
        for(int i=0;i<mices.length;i++){
            time=Math.abs(mices[i]-holes[i]);
            max_time=Math.max(max_time,time);
        }
        return max_time;
    }
}
